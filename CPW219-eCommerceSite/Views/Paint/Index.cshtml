@model IEnumerable<Paint>

@{
    ViewData["Title"] = "Paint Catalog";
}

<h1>Paint Catalog</h1>

<p>
    <a asp-action="Create" asp-controller="Paint">Create Paint</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaintID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Paint item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaintID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.PaintID">Edit</a>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.PaintID">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PaintID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
